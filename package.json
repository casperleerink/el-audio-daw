{
  "name": "el-audio-daw",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5",
      "better-auth": "1.4.9",
      "@rocicorp/zero": "^0.25.11"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F @el-audio-daw/backend dev",
    "dev:setup": "turbo -F @el-audio-daw/backend dev:setup",
    "dev:db": "turbo run dev --filter=@el-audio-daw/db",
    "dev:api": "turbo run dev --filter=@el-audio-daw/api",
    "dev:zero": "turbo run dev --filter=@el-audio-daw/zero-cache",
    "check": "oxlint && oxfmt --write",
    "knip": "knip"
  },
  "dependencies": {
    "@el-audio-daw/env": "workspace:*",
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@el-audio-daw/config": "workspace:*",
    "@types/node": "^25.2.0",
    "knip": "^5.82.1",
    "oxfmt": "^0.19.0",
    "oxlint": "^1.34.0",
    "turbo": "^2.6.3",
    "typescript": "^5.9.3"
  },
  "packageManager": "bun@1.3.5"
}
